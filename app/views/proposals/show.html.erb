
<div class="title">
» <%= @proposal.subject.upcase %> «
</div>

<div class="heading">
  <b>votes:</b> <%= @proposal.votes %>
</div>

<div class="proposal">
<%= @proposal.body %>
</div>

<%= link_to "Vote up", vote_up_proposal_path(@proposal) %> |
<%= link_to "Vote down", vote_down_proposal_path(@proposal) %> |
<%= link_to "Home", root_path %><br />

<div class="comments">
  <div class="heading">
  COMMENTS:
  </div>

  <% @comments.each do |c| %>
    <br />
    <b><%= c.user.name %></b>:
    <%= c.content %>
  <% end %>
  <%#= link_to "Add comment", new_proposal_comment_path(@proposal) %> <br />

  <p>
  Contribute with your opinion:
  <% if user_signed_in? %>
    <%= form_for [@proposal, @new_comment] do |f| %>
      <%= f.text_area :content, :size => "40x10" %>
      <%= f.submit "Add the comment" %>
    <% end %>
  <% else %>
    by <%= link_to('signing in', new_user_session_path) %>
  or <%= link_to('signing up', new_user_registration_path) %>
  <% end %>
  </p>
</div>
